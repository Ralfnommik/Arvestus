<Page
    x:Class="Arvestus_Ralf_Nõmmik.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Arvestus_Ralf_Nõmmik"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:ConnectionId='2' Name="Userbox"
                     PlaceholderText="Username"></TextBox>
            <PasswordBox x:ConnectionId='3' Name="passwordBox"
                         PlaceholderText="Password">
               
                
            </PasswordBox>
            <Button x:ConnectionId='4' Name="button1"
                    Content="Logi sisse"
                                         
                    IsEnabled="True">
            </Button>
            <TextBlock x:ConnectionId='5' Name="resultBlock"></TextBlock>
                     
        </StackPanel>
    </Grid>
</Page>

